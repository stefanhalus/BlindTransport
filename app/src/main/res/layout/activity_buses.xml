<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvStationId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/list_font_size" android:text="@string/activity_buses_message" />

    <ListView
        android:id="@+id/lvBusesStops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnWait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textAlignment="center"
        android:text="@string/activity_buses_waiting_button"
        android:textSize="@dimen/edit_text_size" />

</LinearLayout>