<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/rowImageView"
        android:layout_width="@dimen/list_icon_size"
        android:layout_height="@dimen/list_icon_size"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/checkbox_padding_left"
        android:contentDescription="@string/list_icon_description"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_station_people" />

    <TextView
        android:id="@+id/rowTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/list_item_margin_bottom"
        android:layout_marginStart="@dimen/list_icon_margin_left"
        android:gravity="start"
        android:textSize="@dimen/list_font_size"
        tools:ignore="RelativeOverlap" />

</RelativeLayout>